<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fontFamily="@font/inter_medium"
    android:background="@color/another_green"
    tools:context=".core.presentation.fragments.ProfileFragment">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_profile_picture"
        android:layout_width="180dp"
        android:layout_height="180dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_user_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/user_icon"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize20Percent"
        />

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\@renett_t"
        android:textSize="36dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/iv_profile_picture"
        app:layout_constraintBottom_toTopOf="@id/guideline1"
        app:layout_constraintStart_toStartOf="@id/iv_profile_picture"
        app:layout_constraintEnd_toEndOf="@id/iv_profile_picture"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.48" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_playlists"
        android:paddingStart="16dp"
        android:padding="4dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/guideline2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_playlist"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.36" />

    <TextView
        android:id="@+id/tv_playlist_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="56"
        android:textSize="26sp"
        app:layout_constraintTop_toBottomOf="@id/guideline1"
        app:layout_constraintBottom_toTopOf="@id/tv_playlists"
        app:layout_constraintStart_toStartOf="@id/tv_playlists"
        app:layout_constraintEnd_toEndOf="@id/tv_playlists"
         />

    <TextView
        android:id="@+id/tv_playlists"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="playlists"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/tv_playlist_count"
        app:layout_constraintBottom_toTopOf="@id/guideline2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_subscription"/>

    <TextView
        android:id="@+id/tv_subscription_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="42"
        android:textSize="26sp"
        app:layout_constraintTop_toBottomOf="@id/guideline1"
        app:layout_constraintBottom_toTopOf="@id/tv_subscription"
        app:layout_constraintStart_toStartOf="@id/tv_subscription"
        app:layout_constraintEnd_toEndOf="@id/tv_subscription"
        />

    <TextView
        android:id="@+id/tv_subscription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="subscriptions"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/tv_subscription_count"
        app:layout_constraintBottom_toTopOf="@id/guideline2"
        app:layout_constraintStart_toEndOf="@id/tv_playlists"
        app:layout_constraintEnd_toStartOf="@id/tv_subscriber"/>

    <TextView
        android:id="@+id/tv_subscriber_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:textSize="26sp"
        app:layout_constraintTop_toBottomOf="@id/guideline1"
        app:layout_constraintBottom_toTopOf="@id/tv_playlists"
        app:layout_constraintStart_toStartOf="@id/tv_subscriber"
        app:layout_constraintEnd_toEndOf="@id/tv_subscriber"
        />

    <TextView
        android:id="@+id/tv_subscriber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="subscribers"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/tv_subscriber_count"
        app:layout_constraintBottom_toTopOf="@id/guideline2"
        app:layout_constraintStart_toEndOf="@id/tv_subscription"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>
